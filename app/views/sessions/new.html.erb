<div class="login">
    <div class="pontao">
      P.O.N.T.A.O
    </div>

    <%= form_tag '/login', :class => 'loginForm' do %>

        <label for="login">LOGIN:</label><br>
        <%= text_field_tag :login %><br>
        <label for="senha">SENHA:</label><br>
        <%= password_field_tag :senha %><br>
      <%= submit_tag "Entrar", :class => "btn btn-login" %>

    <% end %>
</div>